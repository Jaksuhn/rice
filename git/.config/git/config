[url "https://github.com/"]
    insteadOf = "gh:"
[url "https://gitlab.com/"]
    insteadOf = "gl:"

[alias]
    b=!git for-each-ref --sort='-authordate' --format='%(authordate)%09%(objectname:short)%09%(refname)' refs/heads | sed -e 's-refs/heads/--'
    c=commit --verbose
    cm=commit --verbose -m
    co=checkout
    cob=checkout -b
    m=commit --amend --verbose
    s=status -s

