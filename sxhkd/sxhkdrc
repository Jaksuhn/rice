#
# wm independent hotkeys
#

# terminal emulator
super + Return
    termite

# ranger
super + ctrl + Return
    termite -e ranger

# program launcher
super + @space
    rofi -show run

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

# web browser
super + q
    qutebrowser

# color stuff
super + y
    ~/dotfiles/color_stuff.sh

# scrot
print
    scrot -e 'mv $f ~/Pictures'

super + {z,x}
    xbacklight -{dec,inc} 10

#
# herbstluftwm hotkeys
#

# quit herbstluft normally
super + alt + Escape
    herbstclient quit

super + shift + r
    herbstclient reload

# close and kill
super + w
    herbstclient close

#
# state/flags
#

# set the window state
super + {s,f,p}
    herbstclient {floating,fullscreen,pseudotile} toggle

#
# focus/swap
#

# explode frame
super + ctrl + space
    herbstclient split explode

# splitting frames
super + {u,o}
    herbstclient split {bottom,right} 0.5

super + r
    herbstclient remove

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    herbstclient {focus,shift} {left,down,up,right}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    herbstclient {use_index,move_index} {1-9,0}

#
# move/resize
#

super + ctrl + {h,j,k,l}
    herbstclient resize {left,down,up,right} +0.05

