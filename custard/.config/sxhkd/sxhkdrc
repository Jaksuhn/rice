#
# wm independent hotkeys
#

# terminal emulator
super + Return
	termite

# program launcher
super + @space
	rofi -show drun

# make sxhkd reload its configuration files
super + Escape
	pkill -USR1 -x sxhkd

# web browser
super + q
	qutebrowser

# backlight
super + {z,x}
	xbacklight -{dec,inc} 5

# lock screen
super + shift + x
	slock

#
# custard hotkeys
#

# quit custard normally
super + shift + q
	custardctl --stop

# close window
super + w
	custardctl window --close

# alt tab
super + Tab
	custardctl --focus next

# move / resize windows
super + {_,ctrl + ,alt + }{k,j,h,l}
	custardctl window --{move,expand,contract} {north,south,west,east}

# move up / down
super + shift + {Up,Down}
	custardctl window --{raise,lower}

# groups
super + {_,ctrl +,alt +}{1-9,0}
	custardctl group --{focus,attach,detach} {1-9,10}

super + shift + {1-9,0}
	custardctl window --attach_to_group {1-9,10}

super + grave + {1-9,0}
	custardctl window --detach_from_group {1-9,10}
